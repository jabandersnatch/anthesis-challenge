# Docker Environment Variables Template
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_NAME=emissions_db
DB_USER=emissions_user
DB_PASSWORD=changeme_secure_password_here

# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-docker-dev-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:4200

# API URL for frontend (optional)
API_URL=http://backend:8000/api
